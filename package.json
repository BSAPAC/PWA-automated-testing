{
	"name": "milana-autopilot",
	"version": "1.0.0",
	"license": "MIT",
	"description": "Milana Web Application BDD Automation testing.",
	"type": "commonjs",
	"dependencies": {
		"@cucumber/cucumber": "^10.0.1",
		"@playwright/test": "^1.40.1",
		"@types/node": "^20.10.2",
		"allure-commandline": "^2.24.1",
		"allure-cucumberjs": "^2.9.2",
		"allure-js-commons": "^2.9.2",
		"appium": "^2.2.3",
		"appium-doctor": "^1.16.2",
		"dayjs": "^1.11.10",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-prettier": "^5.0.1",
		"fs-extra": "^11.2.0",
		"husky": "^8.0.3",
		"junit-report-merger": "^6.0.3",
		"mongodb": "^6.3.0",
		"prettier": "^3.1.0",
		"webdriverio": "^8.26.2"
	},
	"scripts": {
		"debug": "cucumber-js -p dev -c cucumber-config.js tests/**/*.feature",
		"test-all-suites": "yarn clean-repo && yarn test-all-emulators && yarn test-api-dev && yarn test-db-dev",
		"clean-test-dev": "yarn clean-repo && yarn test-dev",
		"test-dev": "cucumber-js -p dev -c cucumber-config.js tests/**/*.feature",
		"test-db-dev": "cucumber-js -p dev -c cucumber-config.js tests/**/db.feature",
		"test-api-dev": "cucumber-js -p dev -c cucumber-config.js tests/**/api.feature",
		"test-ui-dev:chrome": "cucumber-js -p dev -c cucumber-config.js tests/**/ui.feature",
		"test-ui-test:chrome": "cucumber-js -p test -c cucumber-config.js tests/**/ui.feature",
		"test-ui-dev:firefox": "cucumber-js -p dev:firefox -c cucumber-config.js tests/**/ui.feature",
		"test-ui-dev:iPhone14": "cucumber-js -p dev:iPhone14 -c cucumber-config.js tests/**/ui.feature",
		"test-ui-dev:iPadPro11": "cucumber-js -p dev:iPadPro11 -c cucumber-config.js tests/**/ui.feature",
		"test-ui-dev:Pixel7": "cucumber-js -p dev:Pixel7 -c cucumber-config.js tests/**/ui.feature",
		"test-ui-dev:GalaxyS9+": "cucumber-js -p dev:GalaxyS9+ -c cucumber-config.js tests/**/ui.feature",
		"test-all-emulators": "yarn test-ui-dev:iPhone14 && yarn test-ui-dev:iPadPro11 && yarn test-ui-dev:Pixel7 && yarn test-ui-dev:GalaxyS9+ && yarn test-ui-dev:chrome",
		"demo-test-mobile": "yarn cucumber-js -c cucumber-config.js tests/**/mobile.feature",
		"clean-cross-test-dev": "yarn clean-repo && yarn test-dev || true && yarn test-ui-dev:firefox",
		"show-report": "npx allure-commandline serve",
		"combine-xml-reports": "npx jrm 'test-results/combined-junit.xml' 'test-results/*.xml'",
		"prettier": "prettier --write \"**/*.{js,json}\"",
		"eslint-fix": "eslint --ext .js,.json --fix",
		"allure-clean": "node reporter/clean-allure.js",
		"allure-render": "npx allure generate allure-results --clean -o milana-rendered-allure",
		"test-results-clean": "node reporter/clean-test-results.js",
		"clean-repo": "yarn allure-clean && yarn test-results-clean",
		"show-trace": "npx playwright show-trace [append-this-cmd-with-directory-to-.zip-trace-file]",
		"prepare": "husky install",
		"appium-install-driver": "appium driver install uiautomator2",
		"appium": "npx appium"
	},
	"devDependencies": {
		"appium-uiautomator2-driver": "^2.34.2"
	}
}
